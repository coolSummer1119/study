<%@page import="kr.board.vo.BoardVO"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ page import="kr.story.dao.StoryDAO" %>
<%@ page import="kr.story.vo.StoryVO" %>
<%
	Integer user_snum = (Integer)session.getAttribute("user_snum");
	String user_id = (String)session.getAttribute("id");
	int snum = Integer.parseInt(request.getParameter("snum"));

	if(user_snum==null){//로그인이 되지 않은 경우
		response.sendRedirect("loginForm.jsp");
	}else if(!(user_id).equals(request.getParameter("id"))){
%>
	<script>
		alert("작성자아이디가 아닙니다.");
		history.go(-1);
	</script>
<%
	}
	else{//로그인 된 경우
		
		StoryDAO dao = StoryDAO.getInstance();
		StoryVO vo = dao.getStory(snum);
		
%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>글 수정</title>
<link rel="stylesheet" href="<%= request.getContextPath() %>/CSS/style.css" type="text/css">
<script type="text/javascript">
window.onload=function(){
	const myForm = document.getElementById('update_form');
	//이벤트 연결
	myForm.onsubmit =function(){
		const items = document.querySelectorAll('input[type="text"],[type="password"],textarea');
		for(let i=0; i<items.length; i++){
			if(items[i].value.trim()==''){
				const label = document.querySelector('label[for="'+items[i].id+'"]')
				alert(label.textContent +' 항목은 필수 입력');
				items[i].value='';
				items[i].focus();
				return false;
			}
		}
	};
};
</script>
</head>
<body>
<div class="page-main">
	<h1>글 수정</h1>
	<form id="update_form" action="update.jsp" method="post">
		<ul>
			<li>
				<label for="title">제목</label>
				<input type="text" name="title" id="title" value="<%=vo.getTitle()  %>" size="30" maxlength="50">
			</li>
			<li>
				<label for="content">내용</label>
				<textarea rows="5" cols="40" name="content" id="content" ><%=vo.getContent()%></textarea>
			</li>
		</ul>
		<div class="align-center">
			<input type="submit" value="글 수정">
			<input type="button" value="목록" onclick="location.href='list.jsp'">
		</div>
	</form>
</div>
</body>
</html>
<%
}
%>