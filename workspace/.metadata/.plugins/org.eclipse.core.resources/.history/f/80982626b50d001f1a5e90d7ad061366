package kr.util;

import java.io.File;

import javax.servlet.http.HttpServletRequest;

public class FileUtil {
	//업로드 상대경로
	private static final String UPLOAD_PATE= "/upload";
	
	//파일 생성
	public static void createFile(HttpServletRequest request, String param) {
		
	}
	
	
	
	//파일 삭제
	public static void removeFile(HttpServletRequest request,String filename) {
		if(filename!=null) {
			//업로드 절대 경로
			String upload = request.getServletContext().getRealPath(UPLOAD_PATE);
			File file = new File(upload+"/"+filename);
			if(file.exists()) file.delete();
		}
		
		
	}
}
